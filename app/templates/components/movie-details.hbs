{{#if this.activeMovie}}
  <div class="layout-row flex">
    <div class="flex">
      <div><h1>{{this.activeMovie.Title}}</h1>{{this.activeMovie.Year}}</div>

      <h4>Plot</h4>
      <p>{{this.activeMovie.Plot}}</p>

      <h4>Actors</h4>
      <p>{{this.activeMovie.Actors}}</p>

      <div class="layout-row flex">
        <div class="flex">
          <h4>Genre</h4>
          <p>{{this.activeMovie.Genre}}</p>

          <h4>Director</h4>
          <p>{{this.activeMovie.Director}}</p>

          <h4>Writer</h4>
          <p>{{this.activeMovie.Writer}}</p>

          <h4>IMDB Rating (Votes)</h4>
          <div>{{this.activeMovie.imdbRating}} ({{this.activeMovie.imdbVotes}})</div>

          <h4>Rating</h4>
          {{#each this.activeMovie.Ratings as |rating|}}
            <div>{{rating.Source}} {{rating.Value}}</div>
          {{else}}
             None.
          {{/each}}
        </div>
        <div class="flex">
          <h4>Awards</h4>
          <p>{{this.activeMovie.Awards}}</p>

          <h4>Language</h4>
          <p>{{this.activeMovie.Language}}</p>

          <h4>BoxOffice</h4>
          <p>{{this.activeMovie.BoxOffice}}</p>

          <h4>Metascore</h4>
          <p>{{this.activeMovie.Metascore}}</p>

          <h4>Released</h4>
          <p>{{this.activeMovie.Released}}</p>
        </div>
      </div>
    </div>
    <div class="flex-25">
      <img src={{this.activeMovie.Poster}} title={{this.activeMovie.Title}} alt={{this.activeMovie.Title}}/>
    </div>
  </div>
{{else}}
  No movie has been selected.
{{/if}}
